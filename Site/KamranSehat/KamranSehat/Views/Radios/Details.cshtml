@model ViewModels.RadioDetailViewModel
@{
    ViewBag.Title = Model.Radio.Title +" | دانلود فایل صوتی";
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}
<section id="page-title" class="page-title">
    <div class="bg-section">
        <img src="/assets/images/page-title/title-22.jpg" alt="Background" />
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="title title-2 text-center">

                    <div class="clearfix"></div>
                    <div class="title--content">
                        <ol class="breadcrumb">
                            <li><a href="/">خانه</a></li>
                            <li><a href="/radios">رادیو</a></li>
                            <li class="active">@Model.Radio.Title</li>
                        </ol>
                        <div class="title--heading">
                            <h1>@Model.Radio.Title</h1>
                        </div>
                        @*<div class="title--desc">
                            <p>@Model.Radio.Summery</p>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Portfolio Single
============================================= -->
<section id="portfolio" class="portfolio portfolio-single bg-white">
    <div class="container">
        <div class="row">

            <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="portfolio--title">
                    <h1>@Model.Radio.Title</h1>
                    <div class="divider--line">
                        <i class="divider divider--1"></i>
                        <i class="divider divider--2"></i>
                        <i class="divider divider--3"></i>
                        <i class="divider divider--4"></i>
                    </div>
                </div>
                <div class="portfolio--content">
                    @Html.Raw(Model.Radio.Body)
                </div><!-- .portfolio--content end -->
                <div class="portfolio--list">

                    <ul class="list-unstyled mb-0">
                        <li><span>حجم فایل: </span>@Model.Radio.Size</li>
                        <li><span>مدت زمان فایل: </span>@Model.Radio.Duration</li>

                    </ul>

                    @*<div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <a href="#" class="btn btn--primary btn--bordered btn--rounded btn--block btn--basket"><i class="fa fa-shopping-basket"></i>افزودن به سبد خرید</a>
                        </div>
                    </div>*@
                </div>

            </div>

            <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="portfolio--img">

                    <audio controls>
                        <source src="@Model.Radio.RedioUrl" type="audio/mp3">
                        Your browser does not support HTML5 audio.
                    </audio>
                   
                </div>
            </div>

        </div>
    </div>
</section>

