@model ViewModels.ShowProductViewModel

@{
    ViewBag.Title = "مشاهده محصول";
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}
<section id="page-title" class="page-title">
    <div class="bg-section">
        <img src="/assets/images/page-title/title-22.jpg" alt="Background" />
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="title title-2 text-center">
                    <div class="title--content">
                        <ol class="breadcrumb">
                            <li><a href="/">خانه</a></li>
                            <li class="active"><a href="/products"> محصولات </a></li>
                        </ol>
                        <div class="title--heading">
                            <h1>@Model.Product.Title</h1>
                        </div>
                        <div class="title--desc">
                            <p>@Model.Product.Summery</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
