@model ViewModels.CustomerListViewModel
@{
    ViewBag.Title = "مشتریان";
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}
<section id="page-title" class="page-title page-title2">
    <div class="container-fluid bg-overlay bg-overlay-dark">
        <div class="bg-section">
            <img src="/assets/images/page-title/title-22.jpg" alt="کامران صحت" />
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="title title-8 text-center">
                    <div class="title--content">
                        <ol class="breadcrumb">
                            <li><a href="/">خانه</a></li>
                            <li class="active">مشتریان</li>
                        </ol>
                        <div class="title--heading">
                            <h1>مشتریان</h1>
                        </div>
                        <div class="title--desc">
                            <p>در این بخش از وب سایت می توانید مشتریان کلینیک دکتر صحت را مشاهده نمایید.</p>
                        </div>
                    </div>
                </div><!-- .page-title end -->
            </div><!-- .col-md-12 end -->
        </div><!-- .row end -->
    </div><!-- .container end -->
</section><!-- #page-title end -->

<section id="portfolio" class="portfolio portfolio-gallery portfolio-5col bg-white">
    <div class="container-fluid pr-0 pl-0">
        <div class="row">
            <!-- Portfolio Filter
            ============================================= -->
            <div class="col-xs-12 col-sm-12 col-md-12 portfolio-filter">
                <ul class="list-inline mb-0">
                    @foreach (var group in Model.CustomerGroups)
                    {
                    <li><a href="#" data-filter=".@group.Id">@group.Title</a></li>
                    }
                    <li><a class="active-filter" href="#" data-filter="*">همه</a></li>


                </ul>
            </div>
            <!-- .Portfolio-filter end -->
        </div>
        <div id="portfolio-all" class="row">
           
          

            <!-- Portfolio #1 -->

                @foreach (var customer in Model.Customers)
                {
                    <div class="col-xs-12 col-sm-6 col-md-2  customer-item portfolio-item @customer.CustomerGroup.Id">
                        <div class="portfolio--img ">
                            <img src="@customer.ImageUrl" alt="Portfolio Item">
                            <div class="portfolio--hover">
                                <div class="portfolio--action">
                                    <div class="pos-vertical-center">
                                        <div class="portfolio--title">
                                            <h4><a href="#">@customer.Title</a></h4>
                                        </div>
                                        <div class="portfolio--cat">
                                            <a href="#">@customer.CustomerGroup.Title</a>
                                        </div>
                                    </div> 
                                </div><!-- .Portfolio-action end -->
                            </div><!-- .Portfolio-hover end -->
                        </div>

                    </div><!-- . portfolio-item end -->
            <!-- Portfolio #2 -->

                }
          
            <!-- .row end -->

        </div><!-- .container end -->
    </div>
    </section><!-- #portfolio end -->

