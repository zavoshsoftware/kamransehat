
@model ViewModels.RecoverPassViewModel

@{
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}

<section id="page-title" class="page-title page-title2">
    <div class="container-fluid bg-overlay bg-overlay-dark">
        <div class="bg-section">
            <img src="/assets/images/page-title/title-22.jpg" alt="کامران صحت" />
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="title title-8 text-center">
                    <div class="title--content">
                        <ol class="breadcrumb">
                            @*<li><a href="/">خانه</a></li>
                                <li class="active">محصولات</li>*@
                        </ol>
                        <div class="title--heading">
                            <h1>ورود به وب سایت</h1>
                        </div>
                        <div class="title--desc">
                            @*<p>در این بخش از وب سایت می توانید تمامی محصولات آموزشی دکتر کامران صحت را مشاهده نمایید.</p>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





<section id="login-page" class="shop shop-cart bg-white">
    <div class="container">


        @if (TempData["WrongPass"] != null)
            {
            <p class="alert alert-danger text-right dir-rtl" id="wrongEmail">@TempData["WrongPass"]</p>
        }

        @using (Html.BeginForm("RecoverPass", "Account", FormMethod.Post, new { @class = "panel-body wrapper-lg", role = "form" }))
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "alert-danger" })

                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <p class="alert alert-info">
                            کاربر گرامی، درصورتی که پیش از این از وب سایت دکتر کامران صحت خریدی انجام داده باشید، حساب کاربری برای شما ایجاد شده است.
                            <br/>
                            با وارد کردن شماره موبایل در باکس زیر، کلمه عبور برای شما از طریق پیامک ارسال خواهد شد.
                        </p>
                        @Html.LabelFor(model => model.Username, new {@class = "control-label"})
                        @Html.TextBoxFor(m => m.Username, new {@class = "form-control input-lg", @placeholder = Html.DisplayNameFor(model => model.Username)})
                    </div>
                </div>

               
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-primary ">بازیابی رمز عبور</button>
                        </div>
                       
                    </div>
                   
                    </div>
                    }

    </div>
</section>
