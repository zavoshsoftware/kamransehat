@model ViewModels.QuestionCreateViewModel
@{
    ViewBag.Title = "مشاوره آنلاین با دکتر کامران صحت";
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}

<section id="page-title" class="page-title page-title2">
    <div class="bg-section">
        <img src="/assets/images/page-title/banner-2.jpg" alt="دکتر کامران صحت" />
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1">
                <div class="title title-2 text-center">
                    <div class="clearfix"></div>
                    <div class="title--content">
                        <ol class="breadcrumb">
                            <li><a href="/">خانه</a></li>
                            <li class="active">مشاوره آنلاین</li>
                        </ol>
                        <div class="title--heading">
                            <label>مشاوره آنلاین</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="contact1" class="contact-2 bg-white pb-90">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-5 business-desc">

                <p>
می توانید با تکمیل فرم رو به رو و پرداخت مبلغ 50،000 تومان، سوالات خود را از آقای دکتر کامران صحت بپرسید. در صورتی که قصد دارید زمانی را برای مشاوره حضوری یا تلفنی تخصیص دهید، به صفحه <a href="/consult-request">درخواست مشاوره</a> مراجعه نمایید.</p>
                <p>
سوال شما ظرف مدت 24 ساعت پاسخ داده خواهد شد.                </p>
                <p>
پاسخ برای شما ایمیل می شود. همچنین می توانید وارد حساب کاربری خود در وب سایت کامران صحت شده و پاسخ سوالات خود را مشاهده نمایید.                </p>

            </div>
            <div class="col-xs-12 col-sm-12 col-md-7">

                <div class="contact-form">
                    @using (Html.BeginForm("Create", "Questions", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "alert-danger" })
                        <div class="row">
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.FullName, new { @placeholder = "نام و نام خانوادگی*", @class = "form-control" })
                            </div>
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.CellNumber, new { @placeholder = "تلفن همراه*", @class = "form-control" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.Email, new { @placeholder = "ایمیل", @class = "form-control" })
                            </div>
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.Subject, new { @placeholder = "موضوع سوال", @class = "form-control" })
                            </div>
  
                        </div>
 
                        <div class="row">
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.Body, new { @placeholder = "متن سوال*", @class = "form-control" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <input type="submit" value="ثبت درخواست" class="btn btn--secondary btn--block">
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
