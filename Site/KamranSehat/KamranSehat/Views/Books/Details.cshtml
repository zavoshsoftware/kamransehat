@model ViewModels.BookDetailViewModel

@{
    ViewBag.Title ="دانلود کتاب "+ Model.Book.Title;
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}
<section id="page-title" class="page-title">
    <div class="bg-section">
        <img src="/assets/images/page-title/title-22.jpg" alt="Background" />
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="title title-2 text-center">

                    <div class="clearfix"></div>
                    <div class="title--content">
                        <ol class="breadcrumb">
                            <li><a href="/">خانه</a></li>
                            <li><a href="/booklist">کتاب</a></li>
                            <li class="active">@Model.Book.Title</li>
                        </ol>
                        <div class="title--heading">
                            <h1>@Model.Book.Title</h1>
                        </div>
                        @*<div class="title--desc">
                            <p>@Model.Book.Summery</p>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Portfolio Single
============================================= -->
<section id="portfolio" class="portfolio portfolio-single bg-white">
    <div class="container">
        <div class="row">

            <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="portfolio--title">
                    <h1>@Model.Book.Title</h1>
                    <div class="divider--line">
                        <i class="divider divider--1"></i>
                        <i class="divider divider--2"></i>
                        <i class="divider divider--3"></i>
                        <i class="divider divider--4"></i>
                    </div>
                </div>
                <div class="portfolio--content">
                    @Html.Raw(Model.Book.Body)
                </div><!-- .portfolio--content end -->
                <div class="portfolio--list">

                    <ul class="list-unstyled mb-0">
                        <li><span>حجم فایل: </span>@Model.Book.Size</li>

                    </ul>

                    <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                <a href="@Model.Book.BookUrl" class="btn btn--primary btn--bordered btn--rounded btn--block btn--basket"><i class="fa fa-download"></i>دانلود</a>
                            </div>
                        </div>
                </div>

            </div>

            <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="product--img">
                    <img src="@Model.Book.ImageUrl" alt="@Model.Book.Title" width="100%"/>
                    <div class="product--hover">
                        <div class="product--action">
                            <a href="@Model.Book.BookUrl">دانلود <i class="fa fa-download"></i></a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>